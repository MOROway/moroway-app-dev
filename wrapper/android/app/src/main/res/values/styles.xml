<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/background_moro_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="versionNoteDialog" parent="android:Theme.Dialog">
        <item name="android:background">@color/background_moro_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@style/versionNoteTitle</item>
    </style>

    <style name="versionNoteTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/accent_moro_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/highlight</item>
    </style>

</resources>
