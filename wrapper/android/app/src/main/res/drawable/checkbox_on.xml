<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="@dimen/checkbox_outer_stroke"
                android:color="@color/highlight" />

            <corners
                android:bottomLeftRadius="@dimen/checkbox_corner_radius"
                android:bottomRightRadius="@dimen/checkbox_corner_radius"
                android:topLeftRadius="@dimen/checkbox_corner_radius"
                android:topRightRadius="@dimen/checkbox_corner_radius" />

            <size
                android:width="@dimen/checkbox_outer_size"
                android:height="@dimen/checkbox_outer_size" />

        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">

            <solid android:color="@color/highlight_overlay" />

            <corners
                android:bottomLeftRadius="@dimen/checkbox_corner_radius"
                android:bottomRightRadius="@dimen/checkbox_corner_radius"
                android:topLeftRadius="@dimen/checkbox_corner_radius"
                android:topRightRadius="@dimen/checkbox_corner_radius" />

            <size
                android:width="@dimen/checkbox_inner_size"
                android:height="@dimen/checkbox_inner_size" />

        </shape>
    </item>
</layer-list>
