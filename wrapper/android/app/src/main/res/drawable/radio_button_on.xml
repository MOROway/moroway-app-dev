<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:gravity="center"
            android:shape="oval">

            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="@dimen/radio_button_outer_stroke"
                android:color="@color/highlight_moro_color" />

            <size
                android:width="@dimen/radio_button_outer_size"
                android:height="@dimen/radio_button_outer_size" />

        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">

            <solid android:color="@color/highlight_moro_color_overlay" />

            <size
                android:width="@dimen/radio_button_inner_size"
                android:height="@dimen/radio_button_inner_size" />

        </shape>
    </item>
</layer-list>
