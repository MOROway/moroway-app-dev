<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/bigStylePictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageHandler"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/screen1pic1cs" />

    <Button
        android:id="@+id/animationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:shadowColor="@color/accent_moro_color"
        android:shadowRadius="10"
        android:text="@string/a_home_animation_button"
        android:textColor="@color/white_clean"
        android:textSize="36sp" />

    <LinearLayout
        android:id="@+id/ImageHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animationButton"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/imageHandlerBackwards"
            style="@android:style/ButtonBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="0dp"
            android:background="@null"
            android:elegantTextHeight="false"
            android:gravity="center|top"
            android:paddingEnd="30dp"
            android:shadowColor="@color/accent_moro_color"
            android:shadowRadius="10"
            android:singleLine="false"
            android:text="@string/a_home_iHB"
            android:textAlignment="center"
            android:textColor="@color/white_clean"
            android:textSize="45sp" />

        <Button
            android:id="@+id/moreButton"
            style="@android:style/ButtonBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:shadowColor="@color/accent_moro_color"
            android:shadowRadius="10"
            android:text="@string/title_activity_optionen"
            android:textColor="@color/white_clean"
            android:textSize="24sp" />

        <Button
            android:id="@+id/imageHandlerForwards"
            style="@android:style/ButtonBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="0dp"
            android:background="@null"
            android:paddingStart="30dp"
            android:shadowColor="@color/accent_moro_color"
            android:shadowRadius="10"
            android:text="@string/a_home_iHF"
            android:textColor="@color/white_clean"
            android:textSize="45sp" />
    </LinearLayout>

</RelativeLayout>
