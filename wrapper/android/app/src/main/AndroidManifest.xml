<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebGameActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout"
            android:exported="true"
            android:label="@string/title_activity_animation"
            android:launchMode="singleTop"
            android:screenOrientation="locked">
            <intent-filter
                android:autoVerify="true"
                android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:host="app.moroway.de" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebSettingsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:screenOrientation="locked" />
        <activity
            android:name=".WebHelpActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_help"
            android:screenOrientation="locked" />
        <activity
            android:name=".MenuActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_optionen"
            android:screenOrientation="locked" />
        <activity
            android:name=".Gimmick1Activity"
            android:configChanges="keyboardHidden|screenSize"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Gimmick2Activity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor" />
        <activity
            android:name=".JSErrorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_jserror"
            android:screenOrientation="sensor" />
    </application>

</manifest>
